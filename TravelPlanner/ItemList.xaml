<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelPlanner.ItemList"
             Title="ItemList"
             WidthRequest="350"
             HeightRequest="600">
    <VerticalStackLayout Padding="30"
                         Spacing="15">
        <Grid ColumnDefinitions="Auto, *, Auto">
            <Button Grid.Column="0" Text="Back" HeightRequest="30"
                    BackgroundColor="Gray" TextColor="White"
                    VerticalOptions="Center"/>
            <Label Grid.Column="1" Text="Things to pack" FontSize="20" VerticalOptions="Center" HorizontalOptions="Center"/>
            <Button Grid.Column="2" Text="Save" HeightRequest="30"/>
        </Grid>

        <VerticalStackLayout>
            <Border HeightRequest="1" BackgroundColor="White" Opacity="50"/>
            <HorizontalStackLayout Spacing="5" Margin="0">
                <CheckBox/>
                <Label Text="toothbrush"  VerticalOptions="Center"/>
            </HorizontalStackLayout>
            <Border HeightRequest="1" BackgroundColor="White" Opacity="50"/>
        </VerticalStackLayout>

        <Button Text="Add" WidthRequest="100" HeightRequest="25"/>
    </VerticalStackLayout>
</ContentPage>